---
import Layout from "@layouts/Layout.astro"
import InnerHero from "@components/sections/InnerHero.astro"
import FeatureDetails from "@components/sections/FeatureDetails.astro";
import { getFeatureBySlug } from "@data/features";
import Stats from '@components/sections/Stats.astro';
import { statsLists } from '@data/stats';
import Eyebrow from '@components/ui/Eyebrow.astro';

const heroContent = {
    title: "Servicios - Integraciones", //"Contact Us",
    description: ""
}

const feature = getFeatureBySlug('integraciones');

const beneficios = [
  "Conectas tus sistemas clave en una arquitectura unificada, eliminando silos y mejorando la coordinación entre todas las áreas del negocio.",
  "Tomas decisiones más rápidas y acertadas al contar con datos consolidados de finanzas, clientes, operaciones y logística en tiempo real.",
  "Aumentas la productividad automatizando tareas manuales, eliminando reprocesos y reduciendo errores por falta de integración.",
  "Escalas tu operación digital con desarrollos web a medida que se adaptan a tus procesos y herramientas actuales.",
  "Proteges tu información ante fallos o ciberataques mediante respaldos automatizados, cifrados y validados regularmente sin intervención manual."
];

const sideBySideStats = {
    eyebrow: "IMPACTO",
    title: "Resultados tangibles para tu organización",
    description: "En promedio, las organizaciones que implementan este servicio experimentan mejoras significativas en sus proyectos y operaciones clave.",
    variant: 'side-by-side' as const,
    stats: statsLists.integraciones.stats,
    content: {
        title: "Resultados tangibles para tu organización",
        description: "En promedio, las organizaciones que implementan este servicio experimentan mejoras significativas en sus proyectos y operaciones clave.",

    }
};

