---
import type { Feature } from '@data/features';

export interface Props {
  feature: Feature;
}

const { feature } = Astro.props;
---

<section class="py-12">
  <div class="site-container px-4">
    <div class="mb-12">
      <h2 class="text-4xl font-bold mb-4 text-primary">
        {feature.title}
      </h2>
      {feature.descriptionPage && (
        <p class="text-lg text-gray-700 max-w-2xl mb-8">
          {feature.descriptionPage}
        </p>
      )}
    </div>
    {feature.featuresPage && feature.featuresPage.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {feature.featuresPage.map(card => (
          <div class="bg-white rounded-lg shadow p-6 flex flex-col items-start">
            {card.image && (
              <img src={card.image} alt={card.title} class="w-full h-48 object-cover rounded mb-4 border border-gray-200" loading="lazy" />
            )}
            <h3 class="text-xl font-semibold mb-2 text-primary">{card.title}</h3>
            <p class="text-sm text-gray-700">{card.description}</p>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

<style>
.site-container {
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
}
.text-primary {
  color: #0f3c5c;
}
</style>
