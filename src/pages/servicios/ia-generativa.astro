---
import Layout from "@layouts/Layout.astro"
import InnerHero from "@components/sections/InnerHero.astro"
import FeatureDetails from "@components/sections/FeatureDetails.astro";
import { getFeatureBySlug } from "@data/features";
import Stats from '@components/sections/Stats.astro';
import { statsLists } from '@data/stats';
import Eyebrow from '@components/ui/Eyebrow.astro';
import { faqLists } from "@data/faqs";
import Faqs from '@components/sections/Faqs.astro';

// --- Rich Snippet FAQ Schema ---
const serviceFaqs = faqLists.ia?.faqs || [];
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": serviceFaqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const jsonLdString = JSON.stringify(faqSchema, null, 2); // Bien indentado para legibilidad

const heroContent = {
    title: "Servicios - Agentes de IA Generativa", //"Contact Us",
    description: ""
}

const feature = getFeatureBySlug('ia');

const beneficios = [
  "Automatizas decisiones clave con IA, reduciendo tiempos operativos y aumentando la precisión en procesos críticos del negocio.",
  "Mejoras la experiencia del usuario mediante chatbots que responden con rapidez, coherencia y comprensión contextual avanzada.",
  "Optimizas procesos con agentes autónomos que toman decisiones y ejecutan acciones de forma independiente, reduciendo la intervención humana.",
  "Proteges datos sensibles con anonimización inteligente, garantizando cumplimiento normativo y confianza en el tratamiento de la información.",
  "Automatizas flujos de trabajo y procesos de toma de decisiones utilizando modelos de IA, aumentando la eficiencia operativa y reduciendo errores.",
  "Escalas soluciones de IA generativa que se adaptan a tus sistemas actuales y evolucionan con tus necesidades futuras."
];

const sideBySideStats = {
    eyebrow: "IMPACTO",
    title: "Resultados tangibles para tu organización",
    description: "En promedio, las organizaciones que implementan este servicio experimentan mejoras significativas en sus proyectos y operaciones clave.",
    variant: 'side-by-side' as const,
    stats: statsLists.ia.stats,
    content: {
        title: "Resultados tangibles para tu organización",
        description: "En promedio, las organizaciones que implementan este servicio experimentan mejoras significativas en sus proyectos y operaciones clave.",

    }
};

const faqsSection = {
    eyebrow: "Preguntas frecuentes",
    title: 'Agentes de IA',
    description: 'Encuentra las respuestas a las preguntas más frecuentes sobre nuestros servicios.',
    faqs: faqLists.ia.faqs
}

---

<Layout title="Servicios - Agentes de IA Generativa"
description="Soluciones con IA generativa para potenciar la eficiencia y automatización en tu organización."
jsonLdString={jsonLdString}>

    <InnerHero content={heroContent} />
    {feature && <FeatureDetails feature={feature} />}

    <div
    class="bg-background-light text-headline-light py-12"
>
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
        <div class="md:col-span-2">
          <div class="mb-6 flex items-center gap-2">
  <Eyebrow text="Beneficios" background="base" />

</div>
          <div class="space-y-8">
  {beneficios.map((beneficio) => (
    <div class="text-2xl md:text-3xl font-normal leading-tight">{beneficio}</div>
  ))}
</div>
        </div>
        <div class="flex justify-center md:justify-end">

          <svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 48 48" fill="none">
            <!-- Cuerpo principal -->
            <rect x="8" y="18" width="32" height="18" rx="6" stroke="#0f3c5c" stroke-width="2" fill="none"/>
            <!-- Cabeza -->
            <rect x="16" y="10" width="16" height="12" rx="6" stroke="#0f3c5c" stroke-width="2" fill="none"/>
            <!-- Boca -->
            <rect x="18.5" y="26" width="11" height="5" rx="2.5" stroke="#0f3c5c" stroke-width="2" fill="none"/>
            <!-- Ojos -->
            <circle cx="18" cy="16" r="2" stroke="#0f3c5c" stroke-width="2" fill="none"/>
            <circle cx="30" cy="16" r="2" stroke="#0f3c5c" stroke-width="2" fill="none"/>
            <!-- Antena -->
            <rect x="23" y="6" width="2" height="6" rx="1" fill="none" stroke="#0f3c5c" stroke-width="2"/>
            <!-- Patas laterales -->
            <rect x="6" y="28" width="4" height="8" rx="2" fill="none" stroke="#0f3c5c" stroke-width="2"/>
            <rect x="38" y="28" width="4" height="8" rx="2" fill="none" stroke="#0f3c5c" stroke-width="2"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
          <!-- <svg width="160px" height="160px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M16 8.00169L16 7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7V8.00169M16 8.00169C15.7563 8 15.4907 8 15.2 8H8.8C8.50929 8 8.24373 8 8 8.00169M16 8.00169C17.1649 8.00979 17.8313 8.05658 18.362 8.32698C18.9265 8.6146 19.3854 9.07354 19.673 9.63803C20 10.2798 20 11.1198 20 12.8V16.2C20 17.8802 20 18.7202 19.673 19.362C19.3854 19.9265 18.9265 20.3854 18.362 20.673C17.7202 21 16.8802 21 15.2 21H8.8C7.11984 21 6.27976 21 5.63803 20.673C5.07354 20.3854 4.6146 19.9265 4.32698 19.362C4 18.7202 4 17.8802 4 16.2V12.8C4 11.1198 4 10.2798 4.32698 9.63803C4.6146 9.07354 5.07354 8.6146 5.63803 8.32698C6.16873 8.05658 6.83507 8.00979 8 8.00169M10 11V18M14 11V18M8.5 12.5H15.5M8.5 16.5H15.5"
            stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg> -->


        </div>
      </div>
    </div>
    </div>

    <Stats content={sideBySideStats} background='base' padding="base"/>
    <Faqs content={faqsSection} background='light' padding="base"/>
</Layout>